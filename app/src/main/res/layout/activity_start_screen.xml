<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    tools:context="com.example.kongoji.reanimationtest.StartScreen">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="250dp">

        <SeekBar
            android:id="@+id/myseek"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slider_back"
            android:clickable="false"
            android:max="100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:progressDrawable="@android:color/transparent"
            android:text="Do Not Touch"
            android:thumb="@drawable/slider_icon" />

        <Button
            android:id="@+id/after_slide_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/slider_back_use"
            android:onClick="startReanimation"
            android:text=""
            android:visibility="invisible" />

        <TextView
            android:id="@+id/slider_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/ankunft"
            android:textColor="#fff"
            android:textSize="22dp" />
    </RelativeLayout>

</RelativeLayout>
