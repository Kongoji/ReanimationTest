<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#99CC00" />
                    <corners android:radius="6dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="0dp" android:top="4dp">
                <shape>
                    <solid android:color="#777777" />
                    <corners android:radius="6dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="4dp" android:right="0dp">
                <shape>
                    <solid android:color="#BFBFBF" />
                    <corners android:radius="6dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

